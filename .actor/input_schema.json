{
    "title": "Get Site",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "start_url": {
            "title": "Start URL",
            "type": "string",
            "description": "URL to start scraping from",
            "prefill": "https://apify.com",
            "editor": "textfield"
        },
        "max_depth": {
            "title": "Maximum depth",
            "type": "integer",
            "description": "Depth to which to scrape to",
            "default": 1
        },
        "quiet": {
            "title": "Quiet mode",
            "type": "boolean",
            "description": "If true, reduces console output",
            "default": false
        },
        "output_file": {
            "title": "Output file",
            "type": "string",
            "description": "Name of the output markdown file",
            "default": "output.md",
            "editor": "textfield"
        }
    },
    "required": ["start_url"]
}
